<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shutdown_page">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="180dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:text="Ngôn ngữ:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="Thời gian:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="Tên thiết bị:"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="Phiên bản:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Shutdown_Shutdown"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Tắt nguồn"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="500dp"
        android:orientation="vertical"
        >

        <Spinner
            android:id="@+id/sp_Shutdown_NgonNgu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="#5C5757"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="24sp"
            android:entries="@array/Shutdown_NgonNgu"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Shutdown_ThoiGian"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="#5C5757"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ibt_Shutdown_ThoiGian"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:background="#5C5757"
                android:src="@android:drawable/ic_popup_sync" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_Shutdown_NameDevice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#5C5757"
            android:gravity="center_vertical"
            android:text="Olympa DataLogger"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_Shutdown_Version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#5C5757"
            android:gravity="center_vertical"
            android:text="V_1.0.0.1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_Shutdown_ScanSensor"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Quét cảm biến"
            android:textSize="24sp"
            android:textStyle="bold"/>


    </LinearLayout>


</FrameLayout>