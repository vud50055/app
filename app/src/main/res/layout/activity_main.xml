<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="149dp"
        android:layout_height="565dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tv_AppNam"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center|fill_horizontal|center_vertical"
            android:text="DataLogger"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="-180dp"
            tools:layout_editor_absoluteY="82dp" />

        <TextView
            android:id="@+id/tv_SesorData"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:background="#2196F3"
            android:fadingEdge="horizontal|vertical"
            android:gravity="center|center_vertical"
            android:hint="Select Sensor"
            android:rotation="0"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="-320dp"
            tools:layout_editor_absoluteY="1dp" />

        <Spinner
            android:id="@+id/sp_SelectSensorDisplay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/bt_BatDau"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:text="Bắt Đầu"
            tools:layout_editor_absoluteX="-318dp"
            tools:layout_editor_absoluteY="218dp" />

        <Button
            android:id="@+id/bt_Dung"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Dừng"
            tools:layout_editor_absoluteX="448dp"
            tools:layout_editor_absoluteY="54dp" />

        <!--        <Button-->
        <!--            android:id="@+id/bt_SwithLayout"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="70dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:text="Switch Menu"-->
        <!--            tools:layout_editor_absoluteX="757dp"-->
        <!--            tools:layout_editor_absoluteY="332dp" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="1120dp"
        android:layout_height="567dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="1dp">

        <FrameLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="420dp" />


        <LinearLayout
            android:layout_width="402dp"
            android:layout_height="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibt_Home"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/home" />

            <ImageButton
                android:id="@+id/ibt_Setting"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/settings" />

            <ImageButton
                android:id="@+id/ibt_Chart"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/combo_chart" />

            <ImageButton
                android:id="@+id/ibt_File"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/file" />

            <ImageButton
                android:id="@+id/ibt_Shutdown"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shutdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="800dp"
                android:text="Thời gian đo:"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/tv_ThoiGianDo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="00"
                android:textSize="24dp" />
        </LinearLayout>

        />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>